#!/usr/bin/python
# global imports
import sys
import argparse
import time
from splinter import Browser

# local import
import config

class Colors:

    BLUE = '\033[94m'
    GREEN = '\033[92m'
    YELLOW = '\033[93m'
    RED = '\033[91m'
    END = '\033[0m'

# colors
blue = Colors.BLUE
green = Colors.GREEN
yellow = Colors.YELLOW
red = Colors.RED
end = Colors.END

# argument parser
parser = argparse.ArgumentParser(description="Crowbar auto testsuite, run it via 'gordon -a <address> -p <port>'")
parser.add_argument('address',
        help = "crowbar address, for example 192.168.0.2")
parser.add_argument('port',
        help = "crowbar port, for example 80, 3000")
args = parser.parse_args()
user_address = args.address
user_port = args.port

# 'production' browser
#browser = Browser('phantomjs')
# use real browser for test purposes
browser = Browser('chrome')

url = "http://"+ config.username + ":" + config.password + "@" + user_address + ":" + user_port
browser.visit(url)

class Checker(object):
    
    def __init__(self):
        self.errors = 0
        self.success = 0

    def checktext(self, text):

        if browser.is_text_present(text):
            print(text + ' test ' + green + 'PASSED' + end)
            self.success += 1
        else:
            print(text + ' test ' + red + 'FAILED' + end)
            self.errors += 1

    def checkid(self, id):

        if browser.is_element_present_by_id(id):
            print(id + ' test ' + green + 'PASSED' + end)
            self.success += 1
        else:
            print(id + ' test ' + red + 'FAILED' + end)
            self.errors += 1

    def linkfnd_by_href(self, link):

        if browser.find_link_by_href(link):
            print(link + ' test ' + green + 'PASSED' + end)
            self.success += 1
        else:
            print(link + ' test ' + red + 'FAILED' + end)
            self.errors += 1

    def linkfnd_by_name(self, name):

        if browser.find_link_by_text(name):
            print(name + ' test ' + green + 'PASSED' + end)
            self.success += 1
        else:
            print(name + ' test ' + red + 'FAILED' + end)
            self.errors += 1

# switch = boolean, means that we're creating new window in browser(True), or not (False)
    def deepcheck(self, id, link, text, switch):
        
        browser.find_by_id(id).first.click()
        browser.click_link_by_partial_href(link)
        
        if switch:
            window = browser.windows[1]
            window.is_current = True
            for i in text:
                self.checktext(i)
            window.close()
            time.sleep(1)
        else:
            for i in text:
                self.checktext(i) 

# Checking nodes status
    def statuschk(self, css1, css2):
        
        if browser.find_by_css(css1) or browser.find_by_css(css2):
            print(red + "Some nodes have a problem!" + 'FAILED' + end)
            self.errors += 1
        else:
            print(green + "Nodes are OK" + 'PASSED' + end)
            self.success += 1

# 


# check that we can create a new_group
browser.find_by_id('group').first.fill('new_group_1')
browser.find_by_name('commit').first.click()

ck = Checker()

# final output
print("Main page tests")
print('===============')
print('By text:')
print('********')
testsbytext = ['3 nodes', 'crowbar', 'dashboard']

for i in testsbytext:
     ck.checktext(i)

print('By id:')
print('******')
testsbyid = ['nodes', 'dashboard', 'network', 'switch', 'vlan', 'barclamps', 'crowbar', 'openstack', 'utils',
         'queue', 'repositories', 'backup', 'logs', 'swift', 'ucs', 'help']

for i in testsbyid:
     ck.checkid(i)

print()
print("Creating a new group of nodes")
print("*****************************")
ck.checktext('new_group_1')

print()
print("Link tests")
print("***********")
links = ['http://www.suse.com', 'https://www.suse.com/cloud']
for i in links:
     ck.linkfnd_by_href(i)
print()
print("Nodes ststus checks:")
print("********************")
ck.statuschk('.led.unknown', '.led.unready')

print()
print("Nodes section tests")
print("===================")
print("Bulk edit tests")
text = ['Bochs, 3.87 GB, 1 Nics']
ck.deepcheck('nodes', '/nodes/list', text, False)
browser.back()
time.sleep(2)

print("Dashboard tests")
print("---------------")
text = ['automatic grouping.']
ck.deepcheck('nodes', '/dashboard', text, False)

time.sleep(1)

print("Active Roles tests")
print("------------------")
text = ['ceilometer-agent', 'ceilometer-central', 'ceilometer-server', 'ceilometer-swift-proxy-middleware',
         'cinder-controller', 'cinder-volume', 'database-server', 'glance-server', 'heat-server', 'horizon-server',
         'keystone-server', 'manila-server', 'manila-share', 'neutron-server', 'neutron-network', 'nova-controller',
         'nova-compute-kvm', 'rabbitmq-server', 'swift-dispersion', 'swift-proxy', 'swift-ring-compute', 'swift-storage',
         'tempest', 'trove-server']
ck.deepcheck('nodes', '/active_roles',text, False)
print()
print("Roles status checks:")
print("********************")
ck.statuschk('.led.unknown', '.led.unready')




print()
print("Help section tests")
print("==================")
text = ['Architecture and Requirements']
ck.deepcheck('help', '/docs/deployment', text, True)
text = ['OpenStack command-line clients']
ck.deepcheck('help', '/docs/user', text, True)
text = ['How can I administer an OpenStack cloud?']
ck.deepcheck('help', '/docs/admin', text, True)
text = ['Changing the SUSE OpenStack Cloud Dashboard Theme']
ck.deepcheck('help', 'docs/supplement', text, True)
ck.linkfnd_by_href('https://crowbar.github.io')

browser.back()

print()
print("=======")
print(yellow + "Errors: " + str(ck.errors) + end)
print(blue + "Successes: " + str(ck.success) + end)
